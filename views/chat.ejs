<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>KhadiBot - Chat</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        text-align: center;
        background: linear-gradient(135deg, #f3f4f6, #d1e7dd);
        color: #333;
        margin: 0;
        padding: 0;
      }

      h1 {
        color: #065535;
        margin-top: 20px;
      }

      #chatbox {
        width: 90%;
        max-width: 500px;
        height: 400px;
        margin: 20px auto;
        border-radius: 10px;
        padding: 15px;
        background: #fff;
        overflow-y: auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
      }

      .message {
        margin: 8px;
        padding: 10px 15px;
        border-radius: 20px;
        max-width: 75%;
        word-wrap: break-word;
        font-size: 14px;
        display: inline-block;
      }

      .user {
        background: #d1e7dd;
        text-align: right;
        align-self: flex-end;
      }

      .bot {
        background: #f8d7da;
        text-align: left;
        align-self: flex-start;
      }

      #inputContainer {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
      }

      #userInput {
        width: 65%;
        max-width: 400px;
        padding: 10px;
        border: 2px solid #065535;
        border-radius: 20px;
        font-size: 16px;
        outline: none;
      }

      #sendButton,
      #voiceButton {
        background: #065535;
        color: white;
        border: none;
        padding: 10px 15px;
        margin-left: 10px;
        border-radius: 20px;
        cursor: pointer;
        font-size: 16px;
        transition: 0.3s;
      }

      #sendButton:hover,
      #voiceButton:hover {
        background: #048c4c;
      }

      #voiceButton {
        font-size: 18px;
      }
    </style>
  </head>
  <body>
    <h1>KhadiBot - Chat</h1>
    <div id="chatbox">
      <div class="message bot">Welcome to KhadiBot! How can I assist you?</div>
    </div>

    <div id="inputContainer">
      <input
        type="text"
        id="userInput"
        placeholder="Type or speak a message..."
        onkeypress="handleKeyPress(event)"
      />
      <button id="sendButton" onclick="sendMessage()">Send</button>
      <button id="voiceButton" onclick="startVoiceRecognition()">üé§</button>
    </div>

    <script>
      function sendMessage() {
        let inputField = document.getElementById("userInput");
        let userMessage = inputField.value.trim();
        if (!userMessage) return;

        let chatbox = document.getElementById("chatbox");
        chatbox.innerHTML += `<div class="message user">${userMessage}</div>`;
        inputField.value = "";

        chatbox.scrollTop = chatbox.scrollHeight;

        fetch("/chat", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message: userMessage }),
        })
          .then((response) => {
            if (!response.ok) throw new Error("Server error!");
            return response.json();
          })
          .then((data) => {
            if (!data.reply) throw new Error("Empty reply from bot!");
            chatbox.innerHTML += `<div class="message bot">${data.reply}</div>`;
            chatbox.scrollTop = chatbox.scrollHeight;
          })
          .catch((error) => {
            console.error("Error:", error);
            chatbox.innerHTML += `<div class="message bot" style="color: red;">‚ö†Ô∏è Error: Unable to get a response.</div>`;
          });
      }

      function handleKeyPress(event) {
        if (event.key === "Enter") {
          sendMessage();
        }
      }

      function startVoiceRecognition() {
        let recognition = new (window.SpeechRecognition ||
          window.webkitSpeechRecognition)();
        recognition.lang = "en-US";
        recognition.start();

        recognition.onresult = function (event) {
          let userInput = event.results[0][0].transcript;
          document.getElementById("userInput").value = userInput;
          sendMessage();
        };

        recognition.onerror = function (event) {
          console.error("Voice recognition error:", event.error);
        };
      }

      fetch("http://your-backend-url/api/chatbot", {
        method: "POST",
        headers: {
          Authorization: "Bearer YOUR_API_KEY",
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ message: userMessage }),
      });
    </script>
  </body>
</html>
